{
  // https://docs.renovatebot.com/
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  // Restrict automerge to business hours so that we can react quickly if something goes wrong
  "automergeSchedule": ["after 6:00 am and before 9:00 am every weekday"],
  "labels": ["needs approval/merge"],
  // Don't update nextjs until client-side navigation issue is solved
  // https://github.com/vercel/next.js/issues/53967
  "ignoreDeps": ["next", "eslint-config-next", "@next/bundle-analyzer", "@adyen/adyen-web"],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "labels": ["deps"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "labels": ["dev-deps"]
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 2
}