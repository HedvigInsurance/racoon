{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "composite": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext"
  },
  "include": [
    ".",
    "./.eslintrc.js",
    "./jest-setup.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
