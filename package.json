{
  "name": "racoon",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --continue",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "e2e-onboarding": "turbo run e2e --filter=onboarding",
    "e2e-onboarding:headless": "turbo run e2e:headless --filter=onboarding",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "typecheck": "turbo run typecheck",
    "storybook": "turbo run storybook",
    "storybook:build": "turbo run storybook:build",
    "chromatic": "turbo run chromatic"
  },
  "packageManager": "yarn@1.22.17",
  "lint-staged": {
    "*.md": [
      "prettier --ignore-unknown --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-unknown --write",
      "eslint --fix --ignore-pattern 'generated.ts'"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "2.7.1",
    "turbo": "1.4.2"
  },
  "resolutions": {
    "next-i18next/@types/react": "17.0.48"
  }
}
