{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/app/*": ["app/*"],
      "@/appComponents/*": ["appComponents/*"],
      "@/lib/*": ["lib/*"],
      "@/blocks/*": ["blocks/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
      "@/test/*": ["test/*"],
      "@/utils/*": ["utils/*"],
      "@/constants/*": ["constants/*"],
      "@/features/*": ["features/*"],
      "@/mocks/*": ["mocks/*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "composite": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext"
  },
  "include": ["src", "*.d.ts", ".next/types/**/*.ts", "./codegen.ts", "./jest-setup.ts"],
  "exclude": ["node_modules"]
}
