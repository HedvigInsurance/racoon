{
  "exclude": ["node_modules"],
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/blocks/*": ["blocks/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
      "@/test/*": ["test/*"],
      "@/utils/*": ["utils/*"]
    },
    "incremental": true
  },
  "include": ["src", "next-env.d.ts", "index.d.ts"]
}
