{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "codegen": {
      "inputs": ["src/graphql/*.graphql", "codegen.yml"],
      "outputs": ["src/services/**/generated.ts", "src/services/apollo/types.ts"]
    },
    "lint": {
      "dependsOn": ["codegen"],
      "outputs": [],
      "cache": false
    },
    "lint:fix": { "cache": false },
    "typecheck": {
      "dependsOn": ["codegen"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dependsOn": ["codegen"]
    },
    "test": {
      "dependsOn": ["codegen"],
      "outputs": ["coverage/**"]
    },
    "build": {
      "dependsOn": ["codegen"],
      "outputs": [".next/**"]
    },
    "e2e": {
      "dependsOn": ["build"]
    },
    "e2e:headless": {
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    },
    "storybook": {
      "dependsOn": ["codegen"],
      "cache": false
    },
    "storybook:build": {
      "dependsOn": ["codegen"],
      "outputs": ["storybook-static/**"]
    },
    "chromatic": {
      "dependsOn": ["storybook:build"]
    }
  }
}
